#include<bits/stdc++.h>
using namespace std;
int main(){
    int n;
    cin>>n;
 

    vector<int>vec;
    int sum_A=0;
    int sum_B=0;
    for(int i=0;i<n;i++){
       int x;
       cin>>x;
       vec.push_back(x);
    }
    reverse(vec.begin() , vec.end());

    for(int i=0;i<n;i++){
        int a,b;
        //even for serja
        if(i%2==0){
            
            
            if(vec.front()>vec.back()){ //if leftmost number is bigger than right most
                a=vec.front();
                vec.erase(vec.begin());
            }
            else{ //if right most number is bigger than lefmost
                a=vec.back();
                  vec.pop_back();
              
            }
            sum_A+=a;
          
        }
        //odd for Dima
        else{
            
             if(vec.front() > vec.back()){ //if leftmost number is bigger than right most
                b=vec.front();
                 vec.erase(vec.begin());
            }
            else{ //if right most number is bigger than lefmost
                b=vec.back();
                  vec.pop_back();
            }
            
            sum_B+=b;
        }
    }
     cout<<sum_A<<" "<<sum_B;
    return 0;
}
